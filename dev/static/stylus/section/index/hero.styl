.hero
  height 100vh
  min-height 700px
  position relative
  padding-top 90px
  display flex
  flex-direction column
  justify-content center
  z-index 0
  overflow hidden
  @media (max-width breakpoint)
    height auto
    padding 100px 0
    min-height auto
    

.hero__background
  z-index -1
  position absolute
  top 0
  left 0
  bottom 0
  right 0
  overflow hidden
  img 
    width 100%
    height 100%

.hero__content
  padding-left 85px
  max-width 820px
  color white
  @media (max-width breakpoint-xl)
    padding-left 40px
  @media (max-width breakpoint-md)
    padding 0 20px

.hero__date
  font-size 14px
  font-weight 300
  letter-spacing 0.14px
  display block
  margin-bottom 15px
  @media (max-width breakpoint-xl)
    margin-bottom 10px

.hero__title
  font-size 48px
  font-weight 500
  line-height 48px
  letter-spacing 0.48px
  margin-bottom 30px
  @media (max-width breakpoint-xl)
    font-size 44px
    margin-bottom 20px
  @media (max-width breakpoint-md)
    font-size 34px
    line-height 38px

.hero__news
  position absolute
  right 0
  top 0
  bottom 0
  width 100%
  max-width 25%
  background-color accent-color
  z-index 10
  display flex
  flex-direction column
  justify-content center
  border-left 1px solid mercury
  &--opacity
    background-color transparent
    border-left none
  @media (max-width breakpoint)
    display none

.hero__news-block
  width 100%

.hero-news
  color white
  font-size 14px
  font-weight 300
  margin-bottom 10px
  width 100%
  padding 40px
  &:hover
    background-color lighten(accent-color, 5)
  @media (max-width breakpoint-xl)
    padding 20px 40px 
  @media (max-width breakpoint-lg)
    &:last-child
      display none  

.hero-news__content
  max-width 325px

.hero-news__info
  margin-bottom 10px

.hero-news__date
  letter-spacing 0.1px
  display inline-block
  margin-right 20px

.hero-news__title
  font-size 14px
  font-weight 500
  text-transform uppercase
  letter-spacing 0.16px
  margin-bottom 20px

.hero-news__text
  font-weight 300
  line-height 18px
  letter-spacing 0.14px