.plus
  padding 120px 0 140px 160px
  background url(../img/content/index/plus-bg.jpg) center no-repeat
  background-size cover
  @media (max-width breakpoint-lg)
    padding 60px 0 70px 80px
  @media (max-width breakpoint)
    padding 40px
  @media (max-width breakpoint-md)
    padding 40px 20px

.plus__content
  max-width 565px
  color white

.plus__title
  font-size 48px
  line-height 48px
  font-weight 500
  letter-spacing 0.48px
  margin-bottom 50px
  @media (max-width breakpoint-lg)
    font-size 38px
    line-height 38px
    margin-bottom 30px
  @media (max-width breakpoint)
    margin-bottom 20px
  @media (max-width breakpoint-md)
    font-size 28px
    line-height 28px

.plus__subtitle
  font-size 34px
  line-height 34px
  letter-spacing 0.34px
  @media (max-width breakpoint-lg)
    font-size 28px
    line-height 28px
  @media (max-width breakpoint-md)
    font-size 22px
    line-height 24px