.advantage
  display flex
  @media (max-width breakpoint-md)
    position relative
    .slick-dots
      position absolute
      bottom 10px
      left 50%
      transform: translateX(-50%)
      display flex
      li
        font-size 0
        width 8px
        height 8px
        border-radius: 50%
        background-color #fff
        cursor pointer
        &.slick-active
          background-color #000
      li+li
        margin-left 4px

.advantage__block
  width 25%
  padding 50px
  background-color accent-color
  color white
  &+&
    border-left 1px solid mercury
  &:hover
    background-color lighten(accent-color, 5)
  @media (max-width breakpoint-lg)
    padding 20px
  @media (max-width breakpoint-md)
    &+&
      border none
    padding-bottom 30px

.advantage__tag
  font-size 14px
  font-weight 300
  letter-spacing 0.14px
  display block
  margin-bottom 20px
  @media (max-width breakpoint-lg)
    margin-bottom 10px

.advantage__title
  font-size 34px
  font-weight 500
  letter-spacing 0.34px
  margin-bottom 25px
  @media (max-width breakpoint-lg)
    font-size 28px
    margin-bottom 20px

.advantage__text
  &+&
    margin-top 10px