.footer
  padding-top 65px
  position relative
  &:before
    content ''
    display block
    width 2px
    height 100%
    background-color alto
    position absolute
    top 0
    left 50%
    transform translateX(-50%)
  &.footer-press .footer__logo
    border-top: 0px 
    border-bottom 0px
  &.footer-press
    &:before
      border-left 1px solid #e8e8e8
  @media (max-width breakpoint-lg)
    padding-top 30px
  @media (max-width breakpoint)
    &:before
      display none

.footer__logo
  border-top 1px solid alto
  border-bottom 1px solid alto
  padding 30px 85px
  svg
    width 180px
    height 45px
    fill accent-color
  @media (max-width breakpoint-lg)
    padding 20px 40px
  @media (max-width breakpoint)
    border none
    padding 0 40px
  @media (max-width breakpoint-md)
    padding 0 20px

.footer__content
  display flex
  @media (max-width breakpoint)
    display block

.footer__col
  width 50%
  padding 40px 80px 60px
  &--row
    display flex
  @media (max-width breakpoint-lg)
    padding 20px 40px 30px
  @media (max-width breakpoint)
    padding 20px 40px
    width 100%
  @media (max-width breakpoint-md)
    padding 20px
  @media (max-width breakpoint-sm)
    &--row
      display block

.footer__about
  margin-bottom 100px
  @media (max-width breakpoint)
    margin-bottom 20px

.footer__about-title
  font-size 14px
  font-weight 500
  letter-spacing 0.14px
  margin-bottom 20px

.footer__about-content
  display flex
  flex-wrap wrap
  max-width 640px
  justify-content space-between
  @media (max-width breakpoint-sm)
    display block

.footer__about-text
  color base-color
  max-width calc(50% - 20px)
  &:nth-child(even)
    margin-right 10px
  &:nth-last-child(-n+2)
    margin-top 20px
  @media (max-width breakpoint-sm)
    max-width 100%
    &+&
      margin-top 10px

.footer__contacts
  margin-left 100px
  margin-right 60px
  max-width 265px
  flex none
  @media (max-width breakpoint-lg)
    margin-left 0
  @media (max-width breakpoint-md)
    margin-right 20px
    max-width 280px

.footer__contacts-title
  font-size 14px
  font-weight 500
  letter-spacing 0.14px
  margin-bottom 20px

.footer__contacts-policy
  margin-top 80px
  @media (max-width breakpoint-sm)
    margin-top 30px

.footer__form
  width 100%
  @media (max-width breakpoint-sm)
    margin-top 20px