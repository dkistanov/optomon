.header
  display flex
  align-items center
  justify-content center
  height 90px
  position fixed
  top 0
  left 0
  right 0
  color white
  z-index 10
  &--opacity
    background-color transparent
  &--background
    background-color #fff
    .header__wrap
      &:after
        display none
    .header__logo
      svg
        fill accent-color
    .header-text,
    .menu__item 
      color #000
    .menu__open
      svg
        fill #000
  @media (max-width breakpoint-lg)
    height 70px

.header__wrap
  display flex
  align-items center
  padding 0 85px
  width 100%
  max-width 1920px
  position relative
  &:after
    content ''
    display block
    width 100%
    height 90px
    background-image linear-gradient(#000, transparent)
    position absolute
    left 0
    z-index -1
  @media (max-width breakpoint-lg)
    padding 0 20px
    &:after
      height 70px

.header__logo
  max-width 177px
  margin-right auto
  svg
    height 40px
    width 100%
    fill white
  @media (max-width breakpoint-lg)
    max-width 150px

.header__switch
  margin-left 60px
  margin-right 80px
  cursor pointer
  @media (max-width breakpoint-xl)
    margin-right 0 
    margin-left 30px 

.header-text
  font-size 14px
  text-transform uppercase
  letter-spacing .1px